{% extends 'base.html.twig' %}

{% block title %}LazyCast{% endblock %}

{% block body %}
    <div class="example-wrapper h-screen flex items-center justify-center bg-gray-900">
        <div class="bg-gray-800 p-8 rounded-2xl shadow-lg w-full max-w-md">
            <h1 class="text-3xl font-semibold text-white text-center mb-6">LazyCast</h1>

            <form method="POST" action="#">
                <div class="mb-4">
                    <label class="block text-gray-300 text-sm font-medium mb-2">Nom d'utilisateur</label>
                    <input type="text" name="username" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:border-blue-500" required>
                </div>

                <div class="mb-4">
                    <label class="block text-gray-300 text-sm font-medium mb-2">Mot de passe</label>
                    <input type="password" name="password" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:border-blue-500" required>
                </div>

                <div class="mb-6">
                    <label class="block text-gray-300 text-sm font-medium mb-2">URL du serveur</label>
                    <input type="url" name="server_url" class="w-full px-4 py-2 rounded-lg bg-gray-700 text-white border border-gray-600 focus:outline-none focus:border-blue-500" required>
                </div>

                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition duration-200">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}
