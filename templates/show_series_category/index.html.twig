    {% extends 'base.html.twig' %}

    {% block title %}Liste des Séries{% endblock %}

    {% block body %}
        <div class="container mx-auto px-4 py-8">
            <h1 class="text-4xl font-extrabold text-center text-transparent bg-clip-text bg-gradient-to-r from-purple-400 to-pink-600 mb-9">Séries</h1>

            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                {% for serie in series %}
                    <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col h-[450px]">
                        <img src="{{ serie['cover'] }}" alt="{{ serie['name'] }}" class="w-full h-56 object-cover">

                        <div class="p-4 flex flex-col flex-grow justify-between">
                            <div>
                                <h2 class="text-xl font-semibold">{{ serie['name'] }}</h2>
                                <p class="text-gray-600 text-sm mb-2">{{ serie['genre'] }}</p>

                                <p class="text-gray-800 text-sm line-clamp-3">
                                    {{ serie['plot'] }}
                                </p>
                            </div>

                            <div class="mt-4 flex items-center justify-between">
                                <span class="text-yellow-500 font-bold">⭐ {{ serie['rating_5based'] }}/5</span>
                                <a href="#" class="text-blue-500 font-medium hover:underline">Voir plus</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endblock %}
